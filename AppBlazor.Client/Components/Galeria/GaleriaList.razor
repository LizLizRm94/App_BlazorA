@inject LibroService libroService
@inject UtilService utilService

<div class="container">
    <div class="row">
        @foreach (var libro in lista)
        {
            <div class="col-xl-4 col-lg-6 col-md-12 col-sm-12 col-12">
                <div class="card h-100" style="width: 18rem;">
                    <img style="width:100%; height:200px" src="@utilService.obtenerImagen(libro.imagen)" class="card-img-top" alt="...">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@libro.titulo</h5>
                        <p class="card-text">@libro.nombretipolibro - @libro.nombreautor</p>
                        <div class="text-center mt-auto">
                            <button @onclick="(() => libroService.descargar(libro.idlibro, libro.nombrearchivo))"
                                    class="btn btn-success">
                                Descargar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
         }
    </div>
</div>
@code {
    public List<LibroListCLS> lista { get; set; } = new List<LibroListCLS>();
    protected override async Task OnInitializedAsync()
    {
        lista = await libroService.listarLibros();
    }
}
